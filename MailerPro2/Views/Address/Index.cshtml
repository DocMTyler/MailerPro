@model IEnumerable<MailerPro2.Models.AddressListItem>
@{
    ViewBag.Title = "Address List";
}

<h2>Address List</h2>

<h2 style="text-align:center;font-family:Impact">Address List</h2>

<p style="text-align:center">
    @Html.ActionLink("Create New Address Entry", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table" style="text-align:center">
    <tr style=" border-bottom:1px solid black">
        <th style="color:red">
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th style="color:dodgerblue">
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th style="color:red">
            @Html.DisplayNameFor(model => model.StreetAddress)
        </th>
        <th style="color:dodgerblue">
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th style="color:red">
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th style="color:dodgerblue">
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="font-family:Arial, Helvetica, sans-serif">
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.ActionLink("Update Address", "Edit", new { id = item.ID }) <br />
                @Html.ActionLink("Address Info", "Details", new { id = item.ID }) <br />
                @Html.ActionLink("Delete Address", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>


